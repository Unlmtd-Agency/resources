<script>
// Checklist Data
const checklistData = [
  {
    id: 'discovery',
    title: 'Discovery & Research',
    items: [
      { id: 'd1', text: 'Client brief completed and reviewed', required: true },
      { id: 'd2', text: 'Business goals and values documented', required: true },
      { id: 'd3', text: 'Target audience identified and profiled', required: true },
      { id: 'd4', text: 'Competitor logos analysed', required: true },
      { id: 'd5', text: 'Industry trends researched', required: false },
      { id: 'd6', text: 'Brand personality keywords defined', required: true },
      { id: 'd7', text: 'Existing brand assets reviewed (if rebrand)', required: false },
      { id: 'd8', text: 'Budget and timeline confirmed', required: true }
    ]
  },
  {
    id: 'concept',
    title: 'Concept Development',
    items: [
      { id: 'c1', text: 'Mind mapping / brainstorming completed', required: true },
      { id: 'c2', text: 'Minimum 20-30 thumbnail sketches created', required: true },
      { id: 'c3', text: 'Top 3-5 concepts selected for refinement', required: true },
      { id: 'c4', text: 'Typography options explored', required: true },
      { id: 'c5', text: 'Colour palette directions considered', required: true },
      { id: 'c6', text: 'Concepts tested in black and white', required: true },
      { id: 'c7', text: 'Concepts reviewed at various sizes', required: true },
      { id: 'c8', text: 'Internal design review completed', required: false }
    ]
  },
  {
    id: 'design',
    title: 'Design Execution',
    items: [
      { id: 'e1', text: 'Logo constructed in vector format (AI/EPS)', required: true },
      { id: 'e2', text: 'Clean, optimised paths and anchor points', required: true },
      { id: 'e3', text: 'Typography finalised (custom or licensed)', required: true },
      { id: 'e4', text: 'Primary colour palette defined (CMYK + Pantone)', required: true },
      { id: 'e5', text: 'Secondary colour palette defined', required: false },
      { id: 'e6', text: 'Black and white version created', required: true },
      { id: 'e7', text: 'Reversed (white on dark) version created', required: true },
      { id: 'e8', text: 'Greyscale version created', required: true },
      { id: 'e9', text: 'Horizontal and vertical lockups designed', required: true },
      { id: 'e10', text: 'Icon/favicon version created', required: true }
    ]
  },
  {
    id: 'testing',
    title: 'Testing & Refinement',
    items: [
      { id: 't1', text: 'Logo tested at minimum size (20mm width)', required: true },
      { id: 't2', text: 'Logo tested at large scale (billboard/signage)', required: true },
      { id: 't3', text: 'Readability verified across all sizes', required: true },
      { id: 't4', text: 'Tested on various backgrounds (light/dark/photo)', required: true },
      { id: 't5', text: 'Digital screen display tested (RGB conversion)', required: true },
      { id: 't6', text: 'Print proof reviewed (if possible)', required: false },
      { id: 't7', text: 'Mockups created for client presentation', required: true },
      { id: 't8', text: 'Accessibility contrast ratios checked', required: false }
    ]
  },
  {
    id: 'approval',
    title: 'Client Approval',
    items: [
      { id: 'a1', text: 'Concept presentation delivered to client', required: true },
      { id: 'a2', text: 'Client feedback documented', required: true },
      { id: 'a3', text: 'Revisions completed (Round 1)', required: true },
      { id: 'a4', text: 'Revisions completed (Round 2 if needed)', required: false },
      { id: 'a5', text: 'Final design approved in writing', required: true },
      { id: 'a6', text: 'Trademark search recommended to client', required: true }
    ]
  },
  {
    id: 'delivery',
    title: 'File Preparation & Delivery',
    items: [
      { id: 'f1', text: 'AI master file with organised layers', required: true },
      { id: 'f2', text: 'EPS file (outlined fonts)', required: true },
      { id: 'f3', text: 'PDF file (vector, press-ready)', required: true },
      { id: 'f4', text: 'SVG file for web use', required: true },
      { id: 'f5', text: 'PNG files (transparent, various sizes)', required: true },
      { id: 'f6', text: 'JPG files (RGB, web optimised)', required: true },
      { id: 'f7', text: 'Favicon files (ICO, 16x16, 32x32, 180x180)', required: true },
      { id: 'f8', text: 'Social media profile sizes included', required: false },
      { id: 'f9', text: 'Files organised in clear folder structure', required: true },
      { id: 'f10', text: 'README file with usage notes', required: false }
    ]
  },
  {
    id: 'guidelines',
    title: 'Brand Guidelines',
    items: [
      { id: 'g1', text: 'Logo usage rules documented', required: true },
      { id: 'g2', text: 'Minimum size specifications defined', required: true },
      { id: 'g3', text: 'Clear space requirements shown', required: true },
      { id: 'g4', text: 'Colour codes provided (CMYK, RGB, HEX, Pantone)', required: true },
      { id: 'g5', text: 'Incorrect usage examples included', required: true },
      { id: 'g6', text: 'Typography guidelines documented', required: false },
      { id: 'g7', text: 'Co-branding guidelines included', required: false },
      { id: 'g8', text: 'Brand guidelines PDF compiled', required: true }
    ]
  }
];

// State
let checkedItems = {};
let openSections = ['discovery'];

// Load saved state from localStorage
function loadState() {
  const saved = localStorage.getItem('unlmtd-logo-checklist');
  if (saved) {
    checkedItems = JSON.parse(saved);
  }
}

// Save state to localStorage
function saveState() {
  localStorage.setItem('unlmtd-logo-checklist', JSON.stringify(checkedItems));
}

// Calculate progress
function calculateProgress() {
  const allItems = checklistData.flatMap(s => s.items);
  const checkedCount = allItems.filter(item => checkedItems[item.id]).length;
  const total = allItems.length;
  const percentage = Math.round((checkedCount / total) * 100);
  
  const requiredItems = allItems.filter(i => i.required);
  const requiredChecked = requiredItems.filter(item => checkedItems[item.id]).length;
  
  return { checkedCount, total, percentage, requiredChecked, requiredTotal: requiredItems.length };
}

// Update progress display
function updateProgress() {
  const progress = calculateProgress();
  
  document.getElementById('progressPercent').textContent = `${progress.percentage}%`;
  document.getElementById('progressFill').style.width = `${progress.percentage}%`;
  document.getElementById('progressCount').textContent = `${progress.checkedCount} of ${progress.total} tasks complete`;
  document.getElementById('requiredCount').textContent = `${progress.requiredChecked}/${progress.requiredTotal} required`;
}

// Check if section is complete
function isSectionComplete(section) {
  return section.items.every(item => checkedItems[item.id]);
}

// Get section progress
function getSectionProgress(section) {
  const checked = section.items.filter(item => checkedItems[item.id]).length;
  return { checked, total: section.items.length };
}

// Render sections
function renderSections() {
  const container = document.getElementById('checklistSections');
  container.innerHTML = '';
  
  checklistData.forEach((section, index) => {
    const isComplete = isSectionComplete(section);
    const isOpen = openSections.includes(section.id);
    const progress = getSectionProgress(section);
    const progressPercent = (progress.checked / progress.total) * 100;
    
    const sectionEl = document.createElement('div');
    sectionEl.className = `checklist-section${isComplete ? ' is-complete' : ''}`;
    
    sectionEl.innerHTML = `
      <div class="section-header" data-section="${section.id}">
        <div class="section-header__left">
          <div class="section-number">${isComplete ? '<svg width="20" height="20" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>' : (index + 1)}</div>
          <div>
            <h3 class="section-title">${section.title}</h3>
            <p class="section-progress">${progress.checked} of ${progress.total} complete</p>
          </div>
        </div>
        <div class="section-header__right">
          <div class="section-progress-bar">
            <div class="section-progress-bar__fill" style="width: ${progressPercent}%"></div>
          </div>
          <div class="section-toggle${isOpen ? ' is-open' : ''}">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </div>
        </div>
      </div>
      <div class="section-content${isOpen ? ' is-open' : ''}">
        ${section.items.map(item => `
          <div class="checklist-item${checkedItems[item.id] ? ' is-checked' : ''}" data-item="${item.id}">
            <div class="checklist-item__checkbox">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
              </svg>
            </div>
            <span class="checklist-item__text">${item.text}</span>
            ${item.required ? '<span class="checklist-item__badge">Required</span>' : ''}
          </div>
        `).join('')}
      </div>
    `;
    
    container.appendChild(sectionEl);
  });
  
  // Add event listeners
  document.querySelectorAll('.section-header').forEach(header => {
    header.addEventListener('click', () => {
      const sectionId = header.dataset.section;
      if (openSections.includes(sectionId)) {
        openSections = openSections.filter(id => id !== sectionId);
      } else {
        openSections.push(sectionId);
      }
      renderSections();
    });
  });
  
  document.querySelectorAll('.checklist-item').forEach(item => {
    item.addEventListener('click', () => {
      const itemId = item.dataset.item;
      checkedItems[itemId] = !checkedItems[itemId];
      saveState();
      updateProgress();
      renderSections();
    });
  });
}

// Initialize
function init() {
  loadState();
  renderSections();
  updateProgress();
}

// Run on DOM ready
if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>

</body>
</html>

