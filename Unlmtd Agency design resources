// Pre-flight checklist items
const preflightItems = [
  "Document set to CMYK colour mode",
  "All images at 300 DPI minimum",
  "Bleed extended 3mm beyond trim",
  "Critical content within safe zone",
  "Fonts outlined or embedded",
  "Crop marks and bleed marks included",
  "Links embedded (not linked)",
  "Total ink coverage under 300%",
  "Spell check completed",
  "PDF exported as PDF/X-1a or Press Quality"
];

// ============================================
// STATE
// ============================================
let activeProduct = 'businessCards';
let preflightChecked = {};

// Load saved state
function loadState() {
  const saved = localStorage.getItem('unlmtd-print-preflight');
  if (saved) {
    preflightChecked = JSON.parse(saved);
  }
}

// Save state
function saveState() {
  localStorage.setItem('unlmtd-print-preflight', JSON.stringify(preflightChecked));
}

// ============================================
// RENDER FUNCTIONS
// ============================================

function renderSpecCard() {
  const spec = productSpecs[activeProduct];
  const container = document.getElementById('specCardContainer');
  
  container.innerHTML = `
    <div class="spec-card">
      <div class="spec-card__header">
        <div class="spec-card__icon">${spec.icon}</div>
        <h3 class="spec-card__title">${spec.title}</h3>
      </div>
      <div class="spec-card__body">
        <!-- Sizes Table -->
        <div class="sizes-section">
          <div class="sizes-section__label">Standard Sizes</div>
          <table class="sizes-table">
            <thead>
              <tr>
                <th>Format</th>
                <th>Dimensions (mm)</th>
                <th>Pixels @ 300 DPI</th>
              </tr>
            </thead>
            <tbody>
              ${spec.sizes.map(size => `
                <tr>
                  <td class="sizes-table__format">${size.name}</td>
                  <td class="sizes-table__dimensions">${size.dimensions}</td>
                  <td class="sizes-table__dimensions">${size.pixels}</td>
                </tr>
              `).join('')}
            </tbody>
          </table>
        </div>
        
        <!-- Specs Grid -->
        <div class="specs-grid">
          <div>
            <ul class="specs-list">
              <li class="specs-list__item">
                <span class="specs-list__label">Bleed</span>
                <span class="specs-list__value">${spec.bleed}</span>
              </li>
              <li class="specs-list__item">
                <span class="specs-list__label">Safe Zone</span>
                <span class="specs-list__value">${spec.safeZone}</span>
              </li>
              <li class="specs-list__item">
                <span class="specs-list__label">Resolution</span>
                <span class="specs-list__value">${spec.resolution}</span>
              </li>
              <li class="specs-list__item">
                <span class="specs-list__label">Colour Mode</span>
                <span class="specs-list__value">${spec.colourMode}</span>
              </li>
            </ul>
          </div>
          <div>
            <div class="formats-section__label">Accepted File Formats</div>
            <div class="formats-list">
              ${spec.fileFormats.map(format => `
                <span class="format-badge">${format}</span>
              `).join('')}
            </div>
          </div>
        </div>
        
        <!-- Tips -->
        <div class="tips-box">
          <div class="tips-box__header">
            <svg class="tips-box__icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
            </svg>
            <span class="tips-box__title">Pro Tips</span>
          </div>
          <ul class="tips-box__list">
            ${spec.tips.map(tip => `
              <li class="tips-box__item">
                <svg class="tips-box__check" width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                ${tip}
              </li>
            `).join('')}
          </ul>
        </div>
      </div>
    </div>
  `;
}

function renderPreflightChecklist() {
  const grid = document.getElementById('preflightGrid');
  
  grid.innerHTML = preflightItems.map((item, index) => `
    <div class="preflight-item${preflightChecked[index] ? ' is-checked' : ''}" data-index="${index}">
      <div class="preflight-checkbox">
        <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
        </svg>
      </div>
      <span class="preflight-label">${item}</span>
    </div>
  `).join('');
  
  // Add click handlers
  grid.querySelectorAll('.preflight-item').forEach(item => {
    item.addEventListener('click', () => {
      const index = item.dataset.index;
      preflightChecked[index] = !preflightChecked[index];
      saveState();
      renderPreflightChecklist();
    });
  });
}

function updateTabs() {
  document.querySelectorAll('.product-tab').forEach(tab => {
    tab.classList.toggle('is-active', tab.dataset.product === activeProduct);
  });
}

// ============================================
// EVENT LISTENERS
// ============================================

// Product tabs
document.getElementById('productTabs').addEventListener('click', (e) => {
  const tab = e.target.closest('.product-tab');
  if (tab) {
    activeProduct = tab.dataset.product;
    updateTabs();
    renderSpecCard();
  }
});

// Colour cards toggle
document.querySelectorAll('.colour-card').forEach(card => {
  card.addEventListener('click', () => {
    card.classList.toggle('is-expanded');
  });
});

// ============================================
// INIT
// ============================================
function init() {
  loadState();
  renderSpecCard();
  renderPreflightChecklist();
}

if (document.readyState === 'loading') {
  document.addEventListener('DOMContentLoaded', init);
} else {
  init();
}
</script>

</body>
</html>
